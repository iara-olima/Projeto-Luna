<Window x:Class="ProjetoLuna.Views.Painel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoLuna.Views"
        mc:Ignorable="d"
        Title="Painel"  Height="650" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFF8DDEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="381*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="209*"/>
            <ColumnDefinition Width="975*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel
    Orientation="Horizontal" Margin="0,0,1,111" Grid.ColumnSpan="3" Background="#FF8F3765">
            <ToggleButton
                
      Style="{StaticResource MaterialDesignHamburgerToggleButton}" Checked="Acoes_Checked" />
            <TextBlock
                
      VerticalAlignment="Center"
      Margin="16 0 0 0"
     />

        </StackPanel>
        <Button Click="btFuncionario_Click" Content="Funcionario" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Background="#FFC4719D" BorderBrush="#FFC4719D" Grid.Row="1"/>
        <Button Click="btCliente_Click" Content="Cliente" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Width="107" Background="#FFC4719D" BorderBrush="#FFC4719D" Grid.Row="1"/>
        <Button Click="btVenda_Click" Content="Venda" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Width="107" Background="#FFC4719D" BorderBrush="#FFC4719D">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.701"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Click="btCaixa_Click" Content="Caixa" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Grid.Row="1" Width="107" Background="#FFC4719D" BorderBrush="#FFC4719D"/>
        <Button Click="btFinanceiro_Click" Content="Financeiro" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Grid.Row="1" Width="107" Background="#FFC4719D" BorderBrush="#FFC4719D"/>
        <Button Click="btEstoque_Click" Content="Estoque" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="107" Background="#FFC4719D" BorderBrush="#FFC4719D" Cursor="Hand"/>

    </Grid>
</Window>
