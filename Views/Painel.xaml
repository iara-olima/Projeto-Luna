<Window x:Class="ProjetoLuna.Views.Painel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoLuna.Views"
        mc:Ignorable="d"
        Title="Painel"  Height="650" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFF8DDEB">
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="381*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="209*"/>
            <ColumnDefinition Width="975*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel
    Orientation="Horizontal" Margin="0,0,1,111" Grid.ColumnSpan="3" Background="#FF8F3765">
            <ToggleButton
                
      Style="{StaticResource MaterialDesignHamburgerToggleButton}" Checked="ToggleButton_Checked" />
            <TextBlock
                
      VerticalAlignment="Center"
      Margin="16 0 0 0"
     />
            <Button Content="Funcionario" HorizontalAlignment="Left" Margin="46,81,0,0" VerticalAlignment="Top"/>
            <Button Content="Cliente" HorizontalAlignment="Left" Margin="46,120,0,0" VerticalAlignment="Top"/>
            <Button Content="Venda" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top" Grid.Row="1"/>
            <Button Content="Caixa" HorizontalAlignment="Left" Margin="46,47,0,0" VerticalAlignment="Top" Grid.Row="1"/>
            <Button Content="Financeiro" HorizontalAlignment="Left" Margin="46,84,0,0" VerticalAlignment="Top" Grid.Row="1"/>
            <Button Content="Estoque" HorizontalAlignment="Left" Margin="35,133,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        </StackPanel>


    </Grid>
</Window>
