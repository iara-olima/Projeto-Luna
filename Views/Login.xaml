<Window x:Class="ProjetoLuna.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoLuna.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="CPF:" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="93,91,0,0" VerticalAlignment="Top" Height="38" Width="74"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtCPF" Margin="93,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="20" BorderBrush="Black" BorderThickness="2,2,2,2"/>
        <Label Content="Senha: " HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="93,180,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtSenha" Margin="93,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="20" BorderBrush="Black" BorderThickness="2,2,2,2"/>
        <Button Content="Entrar" x:Name="btEntrar" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="293,325,0,0" VerticalAlignment="Top" Height="47" Width="131"/>

    </Grid>
</Window>
